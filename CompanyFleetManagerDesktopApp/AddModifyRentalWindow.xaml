<Window x:Class="CompanyFleetManagerDesktopApp.AddModifyRentalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyFleetManagerDesktopApp"
        mc:Ignorable="d"
        Title="AddModifyRentalWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Rented Vehicle ID:" />
            <TextBox x:Name="TextBoxRentedVehicleId" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Renting Employee ID:" />
            <TextBox x:Name="TextBoxRentingEmployeeId" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Rental Date:" />
            <DatePicker x:Name="DatePickerRentalDate" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Planned Returning Date:" />
            <DatePicker x:Name="DatePickerPlannedReturningDate" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Factual Returning Date:" />
            <DatePicker x:Name="DatePickerFactualReturningDate" Width="200" Margin="0,0,0,10" />

            <Button Content="Save" Width="100" Click="AddRental_Click" />
        </StackPanel>
    </Grid>
</Window>
